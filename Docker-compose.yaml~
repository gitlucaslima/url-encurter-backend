version: '3.8'

services:
  # Serviço para o banco de dados MongoDB
  mongo:
    image: mongo:latest
    container_name: mongo-db
    ports:
      - "27017:27017"  # Porta do MongoDB
    volumes:
      - mongo-data:/data/db  # Persistência dos dados
    networks:
      - url-encoder-network
    environment:
      MONGO_INITDB_ROOT_USERNAME: admin
      MONGO_INITDB_ROOT_PASSWORD: password

  # Serviço para a aplicação Quarkus
  url-encoder-backend:
    image: your-docker-image-name  # Substitua pelo nome da imagem do seu projeto
    build: .
    container_name: url-encoder-backend
    ports:
      - "8080:8080"  # Porta para acessar a API
    depends_on:
      - mongo
    networks:
      - url-encoder-network
    environment:
      QUARKUS_MONGODB_URI: "mongodb://admin:password@mongo:27017/url-encoder-db"
      QUARKUS_PROFILE: dev  # Ou 'prod' conforme a necessidade

volumes:
  mongo-data:  # Volume para persistência dos dados do MongoDB

networks:
  url-encoder-network:
    driver: bridge
